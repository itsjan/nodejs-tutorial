<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/delete-product/<%= product.id %>?confirm=true">
            <h1>Delete Product?</h1>
            <div class="form-control">
                <label for="title">Title</label>
                <input disabled type="text" name="title" id="title" value="<%= product.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input disabled type="text" name="imageUrl" id="imageUrl" value="<%= product.imageUrl %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input disabled type="number" name="price" id="price" step="0.01" value="<%= product.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea disabled name="description" id="description" rows="5"><%= product.description %></textarea>
            </div>

            <input type="hidden" id="productId" name="productId" value=<%= product.id %>>

            <a class="btn" href="/admin/delete-product/<%= product.id%>?confirm=true">CONFIRM DELETE</a>
        </form>

    </main>
    <%- include('../includes/end.ejs') %>