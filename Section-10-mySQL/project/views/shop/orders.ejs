<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1>No Orders</h1>
        <% } 
        else
        { %>
        <h1>Your Orders</h1>
        <ul>
            <% orders.forEach(order => { %>
            <li>
                <h1>Order #<%= order.id %></h1>
                <ul>
                    <% order.products.forEach(product => { %>
                    <li>
                        <%= product.orderItem.qty %> * <%= product.title %>
                    </li>
                    <% }) %>
                </ul>
            </li>



            <%
        })
        %>
        </ul>

        <% 
        } %>
    </main>
    <%- include('../includes/end.ejs') %>