<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <%- include('../includes/end.ejs') %>

    <main class="centered">
        <h1>
            Cart
        </h1>
        <div>
            <table>
                <thead>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Qty</th>
                </thead>
                <% products.forEach(product => {  %>
                <tr>
                    <td> <%= product.title %> </td>
                    <td> <%= product.price %> </td>
                    <td> <%= product.cartItem.qty %>

                        <%- include('../includes/add-to-cart.ejs',{product: { id : product.id}}) %>
                    </td>
                </tr>

                <% }) %>

            </table>
        </div>


    </main>
    <%- include('../includes/end.ejs') %>